<div class="row justify-content-between fila">
    <div class="col-1"><h3>Imagen</h3></div>
    <div class="col-2"><h3>Nombre</h3></div>
  <%#  <div class="col-1"><h3>Descripcion</h3></div>%>
    <div class="col-2"><h3>Precio</h3></div>
    <div class="col-2"><h3>Cantidad</h3></div>
    <div class="col-2"><h3>Categoria</h3></div>
    <div class="col-2"><h3>Opciones</h3></div>
</div>



<% productos.each do |producto| %>
    <div class="row justify-content-between fila">
            
            <div class="col-1">
                
                    <% if producto.imagenes.attached? %>
                        <%= link_to admin_producto_path(producto) do  %>
                            <%= image_tag producto.imagenes.first, style: 'width:100%' %>
                        <% end %>
                    <% else %>
                        No hay imagenes registradas
                    <% end %>
        
            </div>
            <div class="col-2"><%= link_to producto.nombre, admin_producto_path(producto) %></div>
            <%# <div class="col-1"><%= producto.descripcion </div> %>
            <div class="col-2"><%= producto.precio %></div>
            <div class="col-2"><%= producto.cantidad %></div>
            <div class="col-2"><%= producto.categoria.categoria %></div>
            
            <div class = "col-2">
                <%= link_to admin_editar_producto_path(producto),class:"btn btn-primary"  do %>
                    <i class="bi bi-pencil-fill"></i> 
                <% end %>
               
            </div>
    </div>
<% end %>          